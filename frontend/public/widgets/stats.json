{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "üêØ Tiger World",
          "weight": "Bolder",
          "size": "Large",
          "color": "Accent"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "High Score",
                  "size": "Small",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "text": "${highScore}",
                  "size": "ExtraLarge",
                  "weight": "Bolder"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Levels Completed",
                  "size": "Small",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "text": "${levelsCompleted}",
                  "size": "ExtraLarge",
                  "weight": "Bolder"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${message}",
      "wrap": true,
      "size": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "üéÆ Play Now",
      "url": "https://tiger-world-maze.vercel.app/"
    }
  ]
}
