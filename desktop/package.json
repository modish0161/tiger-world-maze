{
  "name": "tiger-world-desktop",
  "version": "1.0.0",
  "description": "Tiger World Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Indigo Pascal Ltd",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tigerworld.app",
    "productName": "Tiger World",
    "win": {
      "target": "nsis",
      "icon": "../frontend/public/icon-512.png"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      {
        "from": "../frontend/dist",
        "to": "frontend/dist",
        "filter": ["**/*"]
      }
    ]
  }
}
